---
const allPosts = await Astro.glob('../pages/posts/*.md')
const sorted = allPosts.sort((a,b) => a.frontmatter.id - b.frontmatter.id);

const advancedPosts = await Astro.glob('../pages/posts/advanced/*.md')
---
<style>
  ul {padding-left: 20px;}
  li {padding-bottom: 2px;}
</style>
<h2>目次</h2>
<ul>
  <li>
    <a href="/">はじめに</a>
  </li>
  {sorted.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
</ul>
<h3>発展編</h3>
<ul>
  {advancedPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
</ul>